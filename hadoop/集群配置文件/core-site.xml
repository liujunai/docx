<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	<!-- 指定 NameNode 的地址 -->
	<property>
		<name>fs.defaultFS</name>
		<value>hdfs://liu1:8020</value>
	</property>
	<!-- 指定 hadoop 数据的存储目录 -->
	<property>
		<name>hadoop.tmp.dir</name>
		<value>/opt/module/hadoop-3.2.0/data</value>
	</property>
	<!-- 配置 HDFS 网页登录使用的用户为 liu -->
	<property>
		<name>hadoop.http.staticuser.user</name>
		<value>liu</value>
	</property>

	<property>
		<name>hadoop.proxyuser.liu.hosts</name>
		<value>*</value>
	</property>
	<property>
		<name>hadoop.proxyuser.liu.groups</name>
		<value>*</value>
	</property>

</configuration>